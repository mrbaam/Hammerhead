<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root hgap="5.0" prefHeight="400.0" prefWidth="400.0" type="GridPane" vgap="5.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40">
  <columnConstraints>
    <ColumnConstraints hgrow="NEVER" />
    <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="NEVER" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="ALWAYS" />
  </rowConstraints>
   <children>
      <Label text="Name" />
      <TextField fx:id="nameField" GridPane.columnIndex="1" />
      <Button mnemonicParsing="false" GridPane.columnIndex="2">
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/open.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Label text="Typ" GridPane.rowIndex="1" />
      <ChoiceBox fx:id="typeChoice" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label text="Beginn" GridPane.rowIndex="2" />
      <DatePicker fx:id="startDatePicker" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Label text="Geplantes Ende" GridPane.rowIndex="3" />
      <DatePicker fx:id="endDatePicker" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
</fx:root>
